@model NhaSachPN.ViewModel.LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
<div class="row w-25 p-3 mt-5 m-auto" style="border: 1px solid #cdcdcd">
    <h2 class="text-center">Login</h2>
    <div class="col-md-12">
        @Html.LabelFor(t => t.Username)
        @Html.TextBoxFor(t => t.Username, new { placehoder = "Username", @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Username, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-12 mt-3">
        @Html.LabelFor(t => t.Password)
        @Html.PasswordFor(t => t.Password, new { placehoder = "Password", @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Password, "", new { @class = "text-danger" })
    </div>

        <div class="col-md-12">
            @Html.ValidationSummary()
        </div>
        <div class="row col-md-12">
            <div class="col-md-8">
                <p>Bạn chưa có tài khoản!</p>
            </div>
            <div class="col-md-4">
                <a class="text-right" href="/Account/Register">Register</a>
            </div>
        </div>
        <div class="col-md-12 text-center">
            <button type="submit" class="mt-3 btn btn-success">Login</button>
        </div>
</div>
}

@model NhaSachPN.ViewModel.RegisterVM
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Register</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(t => t.Username)
            @Html.TextBoxFor(t => t.Username, new { placehoder = "Username", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Username, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(t => t.Email)
            @Html.TextBoxFor(t => t.Email, new { placehoder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Email, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(t => t.Password)
            @Html.PasswordFor(t => t.Password, new { placehoder = "Password", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Password, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(t => t.ConfirmPassword)
            @Html.PasswordFor(t => t.ConfirmPassword, new { placehoder = "Confirmpassword", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(t => t.Mobile)
            @Html.TextBoxFor(t => t.Mobile, new { placehoder = "Moblie", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Mobile)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(t => t.DateOfBirth)
            @Html.TextBoxFor(t => t.DateOfBirth, new { placehoder = "Date Of Birth", @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(t => t.DateOfBirth)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(t => t.Address)
            @Html.TextBoxFor(t => t.Address, new { placehoder = "Adress", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Address)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(t => t.City)
            @Html.TextBoxFor(t => t.City, new { placehoder = "City", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.City)
        </div>
    </div>
    <button type="submit" class="mt-3 btn btn-success">Register</button>
}


